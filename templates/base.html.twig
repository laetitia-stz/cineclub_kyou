<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Home{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% endblock %}
    </head>

    <body>
        <div class="main-container">
            {% block header %}
                <header class="headband">
                    <img src="{{ asset('images/headband.jpg') }}" alt="salle de cinéma">

                <nav class="top-navbar">
                    <ul class="navbar-ul">
                        <li class="navbar-item">
                            <a class="navbar-link" href="{{ path('app_home') }}">Accueil</a>
                        </li>
                        <li class="navbar-item">
                            <a class="navbar-link" href="{{ path('app_movies_index') }}">Films</a>
                        </li>
                        <li class="navbar-item"> 
                            <a class="navbar-link" href="{{ path('app_casting_directors') }}">Réalisateurs</a>
                        </li>
                        <li class="navbar-item">
                            <a class="navbar-link" href="{{ path('app_casting_actors') }}">Acteurs</a>
                        </li>
                        <li class="navbar-item">
                            <a class="navbar-link" href="{{ path('app_casting_composers') }}">Compositeurs</a>
                        </li>
                    </ul>
                </nav>
                </header>
            {% endblock %}
  
            {% block body %}
                <main class="main"> 
                </main>    
            {% endblock %}
    
            {% block footer %}
                <footer class="footer"> 
                {% if app.user == null %}
                    <a class="nav-btn-login" href="{{ path('app_login') }}">Se connecter</a>
                    {# <a class="btn btn-outline-danger" href="{{ path('app_register') }}">S'inscrire</a> #}

                {% else %}
                    <div class="nav-adminName">
                    Vous êtes connecté(e) en tant administrateur
                    </div>

                     <a class="nav-btn-logout" href="{{ path('app_logout') }}">
                        se déconnecter
                    </a>
                {% endif %}    
                </footer>
            {% endblock %}

        </div>
        {% block javascripts %}
            <!-- Lien vers le fichier JavaScript de Bootstrap -->
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gyb6E1tE1gDmrPU7aPjr5XfD9g11jroTqvHXh5q9SYnNU+v6rVu" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-cuZcZGQvJe1gB0d+JvrsKVoFHzZ8ebDaaGVXh2+F+OCveoaU9Dgz2g2S6dXh23AT" crossorigin="anonymous"></script>
        {% endblock %}
  </body>
</html>
