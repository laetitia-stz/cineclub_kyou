{% extends 'base.html.twig' %}

{% block title %}Casting index{% endblock %}

{% block body %}
        <main class="main"> 
    <h1>Casting index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for casting in castings %}
            <tr>
                <td>{{ casting.id }}</td>
                <td>{{ casting.firstname }}</td>
                <td>{{ casting.lastname }}</td>
                <td>{{ casting.role }}</td>
                <td>
                    <a href="{{ path('app_casting_show', {'id': casting.id}) }}">show</a>
                    <a href="{{ path('app_casting_edit', {'id': casting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_casting_new') }}">Create new</a>
    </main>    
{% endblock %}
