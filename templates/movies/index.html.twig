{% extends 'base.html.twig' %}

{% block title %}Movies index{% endblock %}

{% block body %}
        <main class="main"> 
    <h1>Movies index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Poster</th>
                <th>French_title</th>
                <th>Original_title</th>
                <th>Year</th>
                <th>Prod_countries</th>
                <th>Duration</th>
                <th>Pitch</th>
                <th>Review</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.poster }}</td>
                <td>{{ movie.frenchTitle }}</td>
                <td>{{ movie.originalTitle }}</td>
                <td>{{ movie.year }}</td>
                <td>{{ movie.prodCountries }}</td>
                <td>{{ movie.duration }}</td>
                <td>{{ movie.pitch }}</td>
                <td>{{ movie.review }}</td>
                <td>
                    <a href="{{ path('app_movies_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('app_movies_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_movies_new') }}">Create new</a>
    </main>   
{% endblock %}
